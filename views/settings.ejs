<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - Study Flow</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <style>
        :root {
            --danger-color: #f44336;
            --primary-color: #4CAF50;
            --text-dark: #212121;
            --text-medium: #616161;
            --text-light: #9E9E9E;
            --background-light: #f4f7f6;
            --background-card: #ffffff;
            --border-color: #e0e0e0;
            --border-radius: 8px;
            --shadow-light: rgba(0, 0, 0, 0.08);
            --shadow-medium: rgba(0, 0, 0, 0.15);
        }
        
        /* Additional styles specific to settings page */
        .settings-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .settings-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
            width: 100%;
        }
        
        .settings-grid > .card {
            width: 100%;
            max-width: 100%;
        }

        .profile-section {
            display: flex;
            align-items: center;
            gap: 2rem;
            padding: 1.5rem;
            background: var(--background-light);
            border-radius: var(--border-radius);
            margin-bottom: 1.5rem;
        }

        .profile-pic-large {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid var(--primary-color);
            box-shadow: 0 4px 12px var(--shadow-medium);
        }

        .profile-info h3 {
            margin: 0 0 0.5rem 0;
            font-size: 1.5rem;
        }

        .profile-info p {
            margin: 0.3rem 0;
            color: var(--text-medium);
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin: 1.5rem 0;
        }

        .info-box-item {
            background: var(--background-light);
            padding: 1.2rem;
            border-radius: var(--border-radius);
            border: 1px solid var(--border-color);
        }

        .info-label {
            font-size: 0.85rem;
            color: var(--text-medium);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .info-value {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-dark);
        }

        .badge {
            display: inline-block;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            background-color: #e3f2fd;
            color: #1976d2;
        }

        .connected-account {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.2rem;
            background: var(--background-light);
            border-radius: var(--border-radius);
            border: 1px solid var(--border-color);
            margin-bottom: 1rem;
        }

        .account-details {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .google-icon {
            width: 40px;
            height: 40px;
            background: white;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px var(--shadow-light);
        }

        .warning-section {
            background: #fff3e0;
            border-left: 4px solid #ff9800;
            padding: 1.5rem;
            border-radius: var(--border-radius);
            margin: 1.5rem 0;
        }

        .danger-section {
            background: #ffebee;
            border-left: 4px solid #f44336;
            padding: 1.5rem;
            border-radius: var(--border-radius);
            margin: 1.5rem 0;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            animation: fadeIn 0.3s;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal-content {
            background-color: white;
            margin: 10% auto;
            padding: 2rem;
            border-radius: var(--border-radius);
            width: 90%;
            max-width: 500px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            animation: slideIn 0.3s;
        }

        @keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        .modal-buttons {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 1.5rem;
        }

        @media (max-width: 768px) {
            .profile-section {
                flex-direction: column;
                text-align: center;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .action-buttons .button {
                width: 100%;
                justify-content: center;
            }

            .connected-account {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }
            
            .settings-container {
                padding: 0 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-wrapper">
        <%- include('partials/sidebar', { currentPage: 'settings', username: username }) %>
        
        <main class="main-content">
            <h1>
                <span class="material-icons-outlined" style="font-size: 2.5rem; vertical-align: middle; margin-right: 10px;">settings</span>
                Settings
            </h1>

            <div class="settings-container">
                <div class="settings-grid">

                    <!-- PROFILE OVERVIEW CARD -->
                    <div class="card">
                        <h3>
                            <span class="material-icons-outlined">person</span>
                            Profile Overview
                        </h3>
                        <div class="profile-section">
                            <img src="https://ui-avatars.com/api/?name=<%= username %>&size=200&background=4CAF50&color=fff" 
                                 alt="Profile Picture" 
                                 class="profile-pic-large"
                                 id="profileImage">
                            <div class="profile-info">
                                <h3 id="userName"><%= username %></h3>
                                <p><span class="material-icons-outlined" style="font-size: 1rem; vertical-align: middle;">email</span> <span id="userEmail"><%= email %></span></p>
                                <p><span class="material-icons-outlined" style="font-size: 1rem; vertical-align: middle;">badge</span> <span class="badge" id="userRole">Student</span></p>
                            </div>
                        </div>
                        <p class="text-light" style="font-size: 0.9rem;">
                            <span class="material-icons-outlined" style="font-size: 1rem; vertical-align: middle;">info</span>
                            Your profile information is automatically synced from your Google account.
                        </p>
                    </div>

                    <!-- CONNECTED ACCOUNTS CARD -->
                    <div class="card">
                        <h3>
                            <span class="material-icons-outlined">link</span>
                            Connected Accounts
                        </h3>
                        
                        <div class="connected-account">
                            <div class="account-details">
                                <div class="google-icon">
                                    <svg width="24" height="24" viewBox="0 0 24 24">
                                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                    </svg>
                                </div>
                                <div>
                                    <strong>Google Account</strong>
                                    <p style="margin: 0; color: var(--text-medium); font-size: 0.9rem;" id="googleEmail">Loading...</p>
                                </div>
                            </div>
                            <span style="color: #4CAF50; font-weight: 600; display: flex; align-items: center; gap: 5px;">
                                <span class="material-icons-outlined">check_circle</span>
                                Connected
                            </span>
                        </div>

                        <p class="text-light" style="font-size: 0.9rem;">
                            You signed in using Google. Your account is securely connected.
                        </p>
                    </div>

                    <!-- ACCOUNT INFORMATION CARD -->
                    <div class="card">
                        <h3>
                            <span class="material-icons-outlined">info</span>
                            Account Information
                        </h3>

                        <div class="info-grid">
                            <div class="info-box-item">
                                <div class="info-label">Account Created</div>
                                <div class="info-value" id="accountCreated">Loading...</div>
                            </div>
                            <div class="info-box-item">
                                <div class="info-label">Last Login</div>
                                <div class="info-value" id="lastLogin">Just now</div>
                            </div>
                            <div class="info-box-item">
                                <div class="info-label">Total Notes</div>
                                <div class="info-value" id="totalNotes">0</div>
                            </div>
                            <div class="info-box-item">
                                <div class="info-label">Total Tasks</div>
                                <div class="info-value" id="totalTasks">0</div>
                            </div>
                        </div>

                        <div class="warning-section">
                            <h4 style="margin-top: 0; display: flex; align-items: center; gap: 8px;">
                                <span class="material-icons-outlined">download</span>
                                Download Your Data
                            </h4>
                            <p style="margin-bottom: 1rem;">Export all your study materials, notes, tasks, and account information.</p>
                            <button class="button" onclick="downloadAllData()" style="background-color: #FF9800;">
                                <span class="material-icons-outlined">file_download</span>
                                Download All My Data
                            </button>
                        </div>
                    </div>

                    <!-- PREFERENCES CARD -->
                    <div class="card">
                        <h3>
                            <span class="material-icons-outlined">tune</span>
                            Preferences
                        </h3>
                        
                        <div class="form-group">
                            <label for="userRole">Your Role</label>
                            <select id="roleSelect" disabled style="background-color: #f5f5f5; cursor: not-allowed;">
                                <option value="student">Student</option>
                                <option value="freelancer">Freelancer</option>
                                <option value="teacher">Junior Teacher</option>
                                <option value="college">College</option>
                                <option value="admin">Admin</option>
                            </select>
                            <small style="color: var(--text-medium); margin-top: 0.5rem; display: block;">
                                <span class="material-icons-outlined" style="font-size: 1rem; vertical-align: middle;">lock</span>
                                Your role is assigned by administrators and cannot be changed.
                            </small>
                        </div>
                    </div>

                    <!-- DANGER ZONE CARD -->
                    <div class="card">
                        <h3 style="color: var(--danger-color);">
                            <span class="material-icons-outlined">warning</span>
                            Danger Zone
                        </h3>

                        <div class="danger-section">
                            <h4 style="margin-top: 0;">Delete Account</h4>
                            <p>Once you delete your account, there is no going back. All your data will be permanently deleted including:</p>
                            <ul style="margin: 1rem 0; padding-left: 1.5rem;">
                                <li>Profile and settings</li>
                                <li>All notes and study materials (text, files, links)</li>
                                <li>Task lists and progress</li>
                                <li>Study sessions history</li>
                            </ul>
                        </div>

                        <div class="action-buttons">
                            <a href="/logout" class="button secondary">
                                <span class="material-icons-outlined">logout</span>
                                Sign Out
                            </a>
                            <button class="button" onclick="showDeleteModal()" style="background-color: #f44336; color: white;">
                                <span class="material-icons-outlined">delete_forever</span>
                                Delete My Account
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </main>
    </div>

    <!-- DELETE CONFIRMATION MODAL -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span class="material-icons-outlined" style="color: var(--danger-color); font-size: 2rem;">error</span>
                <h3>Delete Account?</h3>
            </div>
            <p><strong>This action cannot be undone!</strong></p>
            <p style="margin-top: 1rem;">All your data will be permanently deleted. Type <strong>DELETE</strong> to confirm:</p>
            <div class="form-group">
                <input type="text" id="deleteConfirm" placeholder="Type DELETE here" style="width: 100%; margin-top: 1rem;">
            </div>
            <div class="modal-buttons">
                <button class="button secondary" onclick="closeDeleteModal()">Cancel</button>
                <button class="button" onclick="confirmDelete()" style="background-color: var(--danger-color);">
                    Delete My Account
                </button>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script>
        let userData = null;

        window.onload = function() {
            getUserInfo();
        }

        async function getUserInfo() {
            const username = '<%= username %>';
            
            document.getElementById('userName').textContent = username;
            
            document.getElementById('profileImage').src = 
                `https://ui-avatars.com/api/?name=${encodeURIComponent(username)}&size=200&background=4CAF50&color=fff`;
            
            fetchUserStats();
        }

        async function fetchUserStats() {
            try {
                const response = await fetch('/api/user-stats');
                if (response.ok) {
                    const data = await response.json();
                    
                    document.getElementById('totalNotes').textContent = data.totalNotes || '0';
                    document.getElementById('totalTasks').textContent = data.totalTasks || '0';
                    
                    if (data.email) {
                        document.getElementById('userEmail').textContent = data.email;
                        document.getElementById('googleEmail').textContent = data.email;
                    }
                    
                    document.getElementById('accountCreated').textContent = new Date().toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    });
                } else {
                    console.error('Failed to fetch user stats');
                }
            } catch (error) {
                console.error('Error fetching stats:', error);
            }
        }

        async function downloadAllData() {
            if (!confirm('Download all your data? This will include all notes, files, links, and tasks.')) {
                return;
            }

            try {
                const btn = event.target;
                btn.disabled = true;
                btn.innerHTML = '<span class="material-icons-outlined">hourglass_empty</span> Preparing download...';

                setTimeout(async () => {
                    const response = await fetch('/api/export-data', {
                        method: 'GET',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    if (response.ok) {
                        const blob = await response.blob();
                        const url = window.URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = `study-flow-data-${new Date().toISOString().split('T')[0]}.zip`;
                        document.body.appendChild(a);
                        a.click();
                        window.URL.revokeObjectURL(url);
                        document.body.removeChild(a);
                        
                        alert('Your data has been downloaded successfully!');
                    } else {
                        alert('Error downloading data. Please try again.');
                    }

                    btn.disabled = false;
                    btn.innerHTML = '<span class="material-icons-outlined">file_download</span> Download All My Data';
                }, 2000);
            } catch (error) {
                console.error('Error:', error);
                alert('Error downloading data. Please try again.');
            }
        }

        function showDeleteModal() {
            document.getElementById('deleteModal').style.display = 'block';
            document.getElementById('deleteConfirm').value = '';
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').style.display = 'none';
        }

        async function confirmDelete() {
            const confirmText = document.getElementById('deleteConfirm').value;
            
            if (confirmText !== 'DELETE') {
                alert('Please type DELETE to confirm account deletion');
                return;
            }

            try {
                const response = await fetch('/api/delete-account', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    alert('Your account has been deleted. You will be redirected to the homepage.');
                    window.location.href = '/logout';
                } else {
                    alert('Error deleting account. Please try again or contact support.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting account. Please try again.');
            }
        }

        window.onclick = function(event) {
            const modal = document.getElementById('deleteModal');
            if (event.target === modal) {
                closeDeleteModal();
            }
        }
    </script>
    <script src="/script.js"></script>
</body>
</html>